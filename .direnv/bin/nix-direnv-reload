#!/usr/bin/env bash
set -e
if [[ ! -d "/home/ndufour/Documents/code/projects/snowy" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/home/ndufour/Documents/code/projects/snowy")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/home/ndufour/Documents/code/projects/snowy" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/home/ndufour/Documents/code/projects/snowy/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/home/ndufour/Documents/code/projects/snowy/.envrc" "/home/ndufour/Documents/code/projects/snowy/.direnv"/*.rc
